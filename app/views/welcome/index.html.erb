        <%= form_tag(locations_path, method: "get") do %>
          {{#each subcategories}}
            <div class="col-md-1">
              <input name="subcategories[]" type="checkbox" value="{{name}}">
            </div><div class="col-xs-2"> 
            <strong>{{name}}</strong><br>{{description}}</div>
          {{/each}}

          // <div class="col-md-1">
